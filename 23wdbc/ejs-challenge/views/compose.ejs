<%- include("partials/header"); -%>

<h1> Compose </h1>

<form action="/compose" method="post" class="needs-validation" novalidate>
  <div class="form-group">
      <label for="userTitle" class="form-label"> Title </label>
      <input type="text" name="userTitle" id="userTitle" class="form-control" autocomplete="off">
      <label for="userPost" class="form-label"> Post </label>
      <textarea name="userPost" id="userPost" class="form-control" rows="4" required></textarea>
  </div>
  <button type="submit" name="button" class="btn btn-primary btn-md ">Publish</button>
</form>

<%- include("partials/footer"); -%>
